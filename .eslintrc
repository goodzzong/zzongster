{
  //"parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "context": "readonly",
    "Feature": "readonly",
    "Scenario": "readonly",
    "actor": "readonly",
    "given": "readonly"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  //"extends": ["airbnb"],
  "plugins": ["import", "react-hooks"],
  "rules": {
    "react/react-in-jsx-scope": 0,
    "no-unused-vars": 1,
    "react/prop-types": 1,
    "no-console": 0,
    "no-underscore-dangle": "off",
    "react/forbid-prop-types": 0,
    "react/jsx-curly-newline": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], // js, jsx 확장자 모두 허용
    "import/no-unresolved": 0,
    "jsx-a11y/label-has-associated-control": "off",
    "consistent-return": "off",
    "react/jsx-indent": "off",
    "no-tabs": "off"
  }
}
